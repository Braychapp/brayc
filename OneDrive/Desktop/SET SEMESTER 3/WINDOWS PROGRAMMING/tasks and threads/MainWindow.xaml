<Window x:Class="tasks_and_threads.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tasks_and_threads"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="FileIO" Content="Select File" HorizontalAlignment="Left" Margin="99,88,0,0" VerticalAlignment="Top" Click="FileIO_Click"/>
        <Label Content="File Size:" HorizontalAlignment="Left" Margin="92,150,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="FileSize" TextWrapping="Wrap" Margin="215,158,0,0" TextChanged="TextBox_TextChanged" Text="1000" HorizontalAlignment="Left" VerticalAlignment="Top" Width="146"/>
        <TextBox x:Name="FilePath" TextWrapping="Wrap" Margin="215,90,0,0" TextChanged="TextBox_TextChanged" Text="File Path:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="146" IsReadOnly="True"/>
        <Button x:Name="GenerateFile" Content="Generate File" HorizontalAlignment="Left" Margin="92,283,0,0" VerticalAlignment="Top" Click="GenerateFile_Click"/>

    </Grid>
</Window>
